<div style="border: solid black 1px" class ="mx-5 p-5">
<div class="d-flex justify-content-center mt-3">
    <h1>Add a dose to <%= @cocktail.name %></h1>
</div>
<br>
<div class="d-flex justify-content-center">
    <img src="http://source.unsplash.com/100x100">
</div>
<br>
<div class="d-flex justify-content-center">
    <u><strong>Current Doses</strong></u>
</div>
<div class="d-flex justify-content-center">
    <ul>
    <% @cocktail.doses.all.each do |dose| %>
    <% array = %w(bake barbecue baste batter beat bind blacken blanch blend boil bone braise bread brew broil brown brush burn butterfly) %>
    <li><%= array.sample.capitalize %> <%= dose.description %> of <%= dose.ingredient.name %></li>
    <% end %>
  </ul>
</div>
<br>
<div class="d-flex justify-content-center">
    <%= render "form", dose: @dose, cocktail: @cocktail %>
</div>
</div>
<br>
<div class="d-flex justify-content-center">
    <%= link_to "Back to Home", root_path , class:"btn btn-primary" %>
</div>
